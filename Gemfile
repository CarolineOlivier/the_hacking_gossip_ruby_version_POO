source "https://rubygems.org"
ruby '3.2.2'
gem 'json'         # Pr manipuler les fichiers JSON facilement
gem 'colorize'     # Pr ajouter de la couleur aux sorties du terminal
gem 'pry'          # Pr le débogage interactif:permet d'insérer des points d'arrêt et d'explorer les variables en cours d'exécution.
gem 'rubocop'      # Outil de linting pour s'assurer que le code respecte les conventions de style Ruby
gem 'tty-prompt'   # Permet de créer des interfaces en ligne de commande plus interactives avec des menus et des choix + élaborés.
